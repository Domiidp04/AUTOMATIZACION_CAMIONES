{
  "manifest_version": 3,
  "name": "Truck Manager (WALLAPOP)",
  "description": "Automatizaci√≥n para Autoline.es, europa-camiones.com, coches.net y wallapop.com",
  "version": "0.0.0",

  "action": { "default_popup": "popup.html" },

  "permissions": ["activeTab", "scripting", "tabs", "storage"],

  "host_permissions": [
    "*://*.autoline.es/*",
    "*://autoline.es/*",
    "*://*.europa-camiones.com/*",
    "*://europa-camiones.com/*",
    "*://*.via-mobilis.com/*",
    "*://via-mobilis.com/*",
    "*://*.coches.net/*",
    "*://coches.net/*",
    "*://*.wallapop.com/*",
    "*://wallapop.com/*",
    "https://truckocasion.com/*",
    "http://127.0.0.1/*",
    "http://localhost/*"
  ],

  "background": { "service_worker": "background.js" },

  "icons": {
    "16": "icons/icon-16.png",
    "24": "icons/icon-24.png",
    "32": "icons/icon-32.png",
    "64": "icons/icon-64.png",
    "128": "icons/icon-128.png"
  },

  "content_scripts": [
    {
      "matches": [
        "*://*.autoline.es/*",
        "*://autoline.es/*",
        "*://*.europa-camiones.com/*",
        "*://europa-camiones.com/*",
        "*://*.via-mobilis.com/*",
        "*://via-mobilis.com/*",
        "*://*.coches.net/*",
        "*://coches.net/*",
        "*://*.wallapop.com/*",
        "*://wallapop.com/*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ]
}
