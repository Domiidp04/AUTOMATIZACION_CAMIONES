{
  "manifest_version": 3,
  "name": "Truck Manager Autoline",
  "description": "Automatizaci√≥n para Autoline.es",
  "version": "1.0",

  "action": {
    "default_popup": "popup.html"
  },

"permissions": [
  "activeTab",
  "scripting",
  "tabs",
  "storage"
],

  "host_permissions": [
    "*://*.autoline.es/*",
    "*://autoline.es/*",
    "https://truckocasion.com/*",
      "*://autoline.es/*"

  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["*://*.autoline.es/*","*://autoline.es/*"],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ]
}